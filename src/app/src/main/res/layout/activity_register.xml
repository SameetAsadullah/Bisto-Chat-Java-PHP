<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="#1c1b1b"
    >

    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:layout_marginStart="50dp"
        android:layout_marginTop="250dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textSize="33sp"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/WelcomeText"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="Create your account ."
        android:textColor="#8A8A8A"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/EmailAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#8C8A8A8A"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColorHint="#CC8A8A8A" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/EmailAddress"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#8A8A8A"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#CC8A8A8A"
        />

    <EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Password"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#8C8A8A8A"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="#CC8A8A8A" />

    <Button
        android:id="@+id/Signup"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/ConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="#36417A"
        android:text="Sign up"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Login"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/Signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:paddingTop="12dp"
        android:text="LOGIN" />


</RelativeLayout>